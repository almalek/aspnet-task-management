@model IEnumerable<Codex.Models.Employee>

<p class="display-4">Employees</p>

<div class="float-right">
    <p>
        <a asp-action="Create"><i class="fas fa-plus-square" title="News"></i></a>
    </p>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.EmployeeId"><i class="fas fa-edit" title="Edit"></i></a>
                &nbsp;&nbsp;
                <a asp-action="Delete" asp-route-id="@item.EmployeeId"><i class="fas fa-trash-alt" title="Delete"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
